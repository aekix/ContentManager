{% extends 'base.html.twig' %}

{% block title %}{{ content.title }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
    {{ encore_entry_link_tags('content') }}
    {{ encore_entry_link_tags('review') }}

{% endblock %}
{% block body %}
    <div class="container-fluid">
    <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-7">
            <div class="card shadow mb-4 contentText">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">{{ action }} un article</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body ">
                    <h1 class="text-center">{{ content.title }}</h1>
                    <br>
                    <br>
                    <br>
                    <p >{{ content.text }}</p>
                </div>
                <!-- Trigger the Modal -->
                <img class="imgModal" id="myImg" src="{{ asset(file.path) }}" alt="{{ file.name }}" style="width:100%;max-width:300px">
                <input type="hidden" id="idContent" name="idContent" value="{{ content.id }}">
                <!-- The Modal -->
                <div id="myModal" class="modal">

                    <!-- The Close Button -->
                    <span class="close">&times;</span>

                    <!-- Modal Content (The Image) -->
                    <img class="modal-content" id="img01">

                    <!-- Modal Caption (Image Text) -->
                    <div id="caption"></div>
                </div>
            </div>
        </div>
        <button type="button" class="btnModal btn btn-primary text-center" alt="{{ file.name }}">Voir pi√®ce jointe</button>

    </div>
{% endblock %}
        {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('home') }}
        {{ encore_entry_script_tags('content') }}
        {{ encore_entry_script_tags('review') }}
        {% endblock %}