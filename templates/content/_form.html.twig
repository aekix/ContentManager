<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Rediger un contenu</h6>
    </div>
    <br class="card-body table table-hover">
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="col-lg-12">
        <div class="input-group input-group-lg">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-lg">Titre du contenu</span>
            </div>
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    </br>

    <div class="col-lg-12 ">
        <div class="input-group input-group-lg">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Options</label>
            </div>
            {{ form_widget(form.category, { 'attr': {'class': 'custom-select'} }) }}
        </div>
    </div>
    </br>
    <div class="col-lg-12">
        <div class="form-group">
            {{ form_widget(form.text) }}
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-lg  btn-block"
                type="submit">{{ button_label|default('Sauvegarder') }}</button>
    </div>
    {{ form_end(form) }}
</div>