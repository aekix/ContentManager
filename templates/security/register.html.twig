<head>
    <title>{% block title %}Inscription{% endblock %}
    </title>
    <link href="/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin-2.min.css" rel="stylesheet">
</head>
{% block body %}

<body class="bg-gradient-primary">
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block " style="background: url(https://source.unsplash.com/n0uRXGaHesY/600x800);
    background-position: center;
    background-size: cover;"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer un compte</h1>
                        </div>
                        <div class="user">
                            {{ form_start(form) }}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(form.firstname) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_widget(form.lastname) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.mail) }}
                            </div>
                            <div style="color:red; margin-left: 15%; list-style: none;">
                                {{ form_errors(form.password.first) }}
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12 mb-3 mb-sm-0">
                                    {{ form_widget(form.password.first) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    {{ form_widget(form.password.second) }}
                                </div>
                            </div>

                            {{ form_row(form.submit) }}
                            {{ form_end(form) }}
                        </div>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="{{ path('forgetPassword') }}">Mot de passe oublié?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="{{ path('login') }}">Déjà inscrit? Connexion!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
{% endblock %}