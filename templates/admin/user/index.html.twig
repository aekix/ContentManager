{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}

{% endblock %}

{% block body %}

<div class="container-fluid">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Utilisateurs</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body table table-hover" >
                <table id="dataTable">
                    <thead>
                    <tr>
                        <th style="height: 3vw">Nom</th>
                        <th>Courriel</th>
                        <th>RÃ´le</th>
                        <th>Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="usersList" id="{{ user.id }}">
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.mail }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                            <td>{{ user.getLabelStatus() }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
    {{ encore_entry_script_tags('admin_user') }}

{% endblock %}