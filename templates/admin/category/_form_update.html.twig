<div class="container-fluid">
        <div class="sb-4">
            <a href="{{ path('category_admin') }}" class="btn btn-sm btn-primary">Retour</a>
        </div>
    <br />
    <div class="card shadow mb-4 ">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Cat√©gorie</h6>
        </div>
        <br class="card-body table table-hover">
        {% for message in  app.session.flashbag.get('message') %}
            <p style="color: forestgreen; text-align: center">{{ message }}</p>
        {% endfor %}
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="col-lg-12">
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-lg">Label</span>
                </div>
                {{ form_widget(form.label, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        </br>

        <div class="col-lg-12 ">
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Description</label>
                </div>
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        </br>
        <div class="text-center">
            {{ form_widget(form.send, { 'attr': {'class': 'btn btn-primary btn-lg  btn-block'} }) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>